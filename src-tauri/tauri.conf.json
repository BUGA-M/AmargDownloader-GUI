{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AMARG Downloader",
  "version": "1.0.0",
  "identifier": "Amarg.Downloader",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "AMARG Downloader",
        "label": "main",
        "width": 1200,
        "height": 600,
        "minWidth": 550,
        "minHeight": 600,
        "resizable": true,
        "visible": false,
        "center": true,
        "devtools": true,
        "focus": false
      },
      {
        "title": "AMARG loader",
        "url": "splashscreen.html",
        "label": "splashscreen",
        "width": 600,
        "height": 600,
        "minWidth": 600,
        "minHeight": 600,
        "decorations": false,
        "transparent": true,
        "backgroundColor": "#00000000",
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "resizable": false,
        "visible": true,
        "center": true,
        "devtools": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/yt-dlp.exe",
      "resources/ffmpeg.exe"
    ],
    "publisher": "BUGA-M",
    "copyright": "Copyright Â© 2025 AMARG. All rights reserved.",
    "category": "Video",
    "shortDescription": "Fast and modern video downloader.",
    "longDescription": "AMARG Downloader is a lightweight, secure, and efficient app for downloading videos with advanced customization and format options.",
    "windows": {
      "digestAlgorithm": "sha256",
      "timestampUrl": null,
      "webviewInstallMode": {
      "type": "offlineInstaller"
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": false,
      "check": false,
      "download": false,
      "install": false,
      "url": null
    }, 
    "log": {},
    "opener": {},
    "dialog": {},
    "fs": {},
    "autostart": {},
    "single-instance": {}
  }
}